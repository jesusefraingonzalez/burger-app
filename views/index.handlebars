<h1>Burgers</h1>

<h2>Add a Burger</h2>
<input type="text" id="burger-input">
<button type="submit" id="burger-button">Add Burger!</button>

<div class="container">
    <h2>Burgers that are not devoured</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li data-devoured="{{devoured}}" data-id="{{id}}">
            <span>{{burger_name}}</span>
            <button type="submit" class="devour-button" data-id={{id}}>Devour!</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="devoured container">
    <h2>Burgers that are devoured</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li data-devoured="{{devoured}}" data-id="{{id}}">
            <span>{{burger_name}}</span>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>